<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping
 PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="model.TransactionHistory" table="TransactionHistory">

        <id name="id" column="id" type="integer">
            <generator class="increment"/>
        </id>

        <many-to-one name="account" column="account_id" class="model.Account"/>
        <property name="product" column="product" type="string"/>
		<property name="amount" column="amount" type="integer"/>
		<property name="type" column="type" type="string"/>
		<property name="time" column="time" type="date"/>
		<property name="price" column="price" type="double"/>
		<property name="positionId" column="position_id" type="int"/>
		<property name="pl" column="pl" type="double"/>
    </class>

</hibernate-mapping>
