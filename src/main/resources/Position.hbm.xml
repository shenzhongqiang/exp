<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping
 PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="main.java.model.Position" table="Position">

        <id name="id" column="id" type="integer">
            <generator class="increment"/>
        </id>
		<many-to-one name="account" column="account_id" class="main.java.model.Account"/>
        <property name="product" column="product" type="string"/>
		<property name="amount" column="amount" type="integer"/>
		<property name="type" column="type" type="string"/>
		<property name="time" column="time" type="date"/>
		<property name="price" column="price" type="double"/>
		<set name="pendingOrders" table="PendingOrder" inverse="true" >
			<key>
				<column name="position_id" not-null="false" />
			</key>
			<one-to-many class="main.java.model.PendingOrder" />
		</set>
    </class>

</hibernate-mapping>
